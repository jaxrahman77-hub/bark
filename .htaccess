# Turn on the rewrite engine
RewriteEngine On

# ----------------------------------------------------------------------
# 1. Externally redirect direct requests for .html files to clean URLs
# Example: Redirects yoursite.com/about.html to yoursite.com/about
# ----------------------------------------------------------------------
RewriteCond %{THE_REQUEST} \.html
RewriteRule ^(.*)\.html$ /$1 [R=301,L]

# ----------------------------------------------------------------------
# 2. Internally rewrite clean URLs to the corresponding .html file
# Example: Shows the content of about.html when a user visits yoursite.com/about
# ----------------------------------------------------------------------
# Make sure the request is not for an existing file
RewriteCond %{REQUEST_FILENAME} !-f
# Make sure the request is not for an existing directory
RewriteCond %{REQUEST_FILENAME} !-d
# Rewrite the URL
RewriteRule ^(.*)$ $1.html [L]